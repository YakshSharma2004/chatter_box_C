<Page x:Class="sql_practice.requests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sql_practice"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="requests">

    <Grid>
        <!-- Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF002B36" Offset="0"/>
                <GradientStop Color="#FF005F73" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="📨 Friend Requests"
                   FontSize="26"
                   FontWeight="Bold"
                   FontFamily="Segoe UI"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,10"/>

        <!-- Friend Requests List -->
        <ScrollViewer Grid.Row="1" Margin="50,10,50,20" VerticalScrollBarVisibility="Auto">
            <ListBox Name="requestList"
                     ItemsSource="{Binding}"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5"
                                Background="#3300FFFF"
                                Padding="10"
                                CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="{Binding user_name}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <Button Content="Accept"
                                            Width="70"
                                            Margin="0,0,10,0"
                                            Background="#FF00C853"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Click="Accept_Click"/>
                                    <Button Content="Reject"
                                            Width="70"
                                            Background="#FFD32F2F"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Click="Reject_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        <Button Content="Back" Name="back_btn" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Background="#FF61E2FF" Width="42" Click="back_btn_Click"/>
    </Grid>
</Page>
