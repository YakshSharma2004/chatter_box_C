<Page x:Class="sql_practice.channelJoin"
      Loaded="channelJoin_loaded"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Join Channels">

    <Grid>
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF001F3F" Offset="0"/>
                <GradientStop Color="#FF00CFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Layout Setup -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="📡 Join a Channel"
                   Grid.Row="0"
                   FontSize="26"
                   FontWeight="Bold"
                   FontFamily="Segoe UI"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,10"/>

        <!-- Search Row -->
        <Grid Grid.Row="1" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <TextBox Name="search_txt"
                     Grid.Column="0"
                     Height="40"
                     FontSize="14"
                     Padding="8"
                     Margin="5"
                     Background="#FFF9F9F9"
                     BorderBrush="#FF00BFFF"
                     BorderThickness="1"/>

            <Button Content="Search"
                    Name="search_btn"
                    Grid.Column="1"
                    Height="40"
                    Margin="5"
                    Background="#FF00BFFF"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Click="Button_Click"/>

            <Button Content="Back"
                    Name="go_back"
                    Grid.Column="2"
                    Height="40"
                    Margin="5"
                    Background="DeepSkyBlue"
                    Foreground="White"
                    BorderBrush="DeepSkyBlue"
                    Click="go_back_Click"/>
        </Grid>

        <!-- Channel List -->
        <Border Grid.Row="2"
                Margin="20"
                CornerRadius="10"
                Background="#33000000"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox Name="channel_list"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         FontSize="16"
                         SelectionChanged="channel_list_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#3300FFFF"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="6">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel Orientation="Vertical" Width="400">
                                        <TextBlock Name="name"
                                                   Text="{Binding name}"
                                                   Foreground="White"
                                                   FontWeight="Bold"
                                                   FontSize="16"/>
                                        <TextBlock Name="description"
                                                   Text="{Binding description}"
                                                   FontSize="13"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <Button Content="Join"
                                            Name="join_btn"
                                            Click="join_btn_Click"
                                            Width="70"
                                            Height="30"
                                            Margin="15,0,0,0"
                                            Background="DeepSkyBlue"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            BorderThickness="0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
